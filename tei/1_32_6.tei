        <body>
            <div1 n="2" type="volume">
                <div2 n="63" type="poem" rhyme="aabbccddeeffaaff">
                    <head>Нежнее нежного</head>
                    <lg type="quatrain" rhyme="" met="">
                        <l n="1">Нежнее нежного</l>
                        <l n="2">Лицо твое,</l>
                        <l n="3">Белее белого</l>
                        <l n="4">Твоя рука,</l>
                    </lg>
                    <lg type="quatrain" rhyme="" met="">
                        <l n="5">От мира целого</l>
                        <l n="6">Ты далека,</l>
                        <l n="7">И всё твое —</l>
                        <l n="8">От неизбежного.</l>
                    </lg>
                    <lg type="quatrain" rhyme="" met="">
                        <l n="9">От неизбежного</l>
                        <l n="10">Твоя печаль,</l>
                        <l n="11">И пальцы рук</l>
                        <l n="12">Неостывающих,</l>
                    </lg>
                    <lg type="quatrain" rhyme="" met="">
                        <l n="13">И тихий звук</l>
                        <l n="14">Неунывающих</l>
                        <l n="15">Речей,</l>
                        <l n="16">И даль</l>
                    </lg>
                </div2>
            </div1>
        </body>
