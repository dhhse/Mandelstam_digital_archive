    <text>
        <body>
            <div1 n="2" type="volume">
                <div2 n="63" type="poem" rhyme="aabbccddeeffaaff">
                    <head>Чарли Чаплин</head>
                    <lg type="quatrain" rhyme="" met="">
                        <l n="1">Чарли Чаплин</l>
                        <l n="2">Чарли Чаплин</l>
                        <l n="3">Две подметки,</l>
                        <l n="4">Две гляделки,</l>
                    </lg>
                    <lg type="quatrain" rhyme="" met="">
                        <l n="5">И прекрасных</l>
                        <l n="6">Чарли Чаплин —</l>
                        <l n="7">Две подметки —</l>
                        <l n="8">Как-то мы живем</l>
                    </lg>
                    <lg type="quatrain" rhyme="" met="">
                        <l n="9">Чужие,</l>
                        <l n="10">Оловянный</l>
                        <l n="11">Голова не</l>
                        <l n="12">Ходит сажа,</l>
                    </lg>
                    <lg type="quatrain" rhyme="" met="">
                        <l n="13">И тихонько</l>
                        <l n="14">И даже</l>
                        <l n="15">И ведет его</l>
                        <l n="16">К чужим,</l>
                    </lg>
                    <lg type="quatrain" rhyme="" met="">
                        <l n="17">Чарли Чаплин,</l>
                        <l n="18">Чаплин, кролик,</l>
                        <l n="19">Чисть корольки,</l>
                        <l n="20">А жена твоя —</l>
                    </lg>
                    <lg type="quatrain" rhyme="" met="">
                        <l n="21">И чудит, чудит</l>
                        <l n="22">Отчего</l>
                        <l n="23">Почему</l>
                        <l n="24">Потому</l>
                    </lg>
                    <lg type="quatrain" rhyme="" met="">
                        <l n="25">Чарли, Чарли,</l>
                        <l n="26">Ты совсем</l>
                        <l n="27">Котелок твой —</l>
                        <l n="28">А Москва</l>
                    </lg>
                </div2>
            </div1>
